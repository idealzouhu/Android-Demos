<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 应用标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频播放器"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 视频源选择按钮 -->
    <Button
        android:id="@+id/btn_select_local"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="选择本地视频"
        android:textSize="16sp"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white"
        android:drawableStart="@android:drawable/ic_menu_gallery"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_select_network"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:id="@+id/btn_select_network"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="播放网络视频"
        android:textSize="16sp"
        android:backgroundTint="#3F51B5"
        android:textColor="@android:color/white"
        android:drawableStart="@android:drawable/ic_menu_share"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/btn_select_local"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"/>

    <!-- 视频文件信息 -->
    <TextView
        android:id="@+id/tv_file_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="未选择视频文件"
        android:textSize="14sp"
        android:textColor="#666"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/btn_select_local"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- 视频播放容器 -->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_file_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">

        <!-- VideoView -->
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <!-- 加载中提示 -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <!-- 播放进度显示 -->
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00 / 00:00"
        android:textSize="14sp"
        android:textColor="#666"
        app:layout_constraintTop_toBottomOf="@id/video_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 进度条 -->
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- 控制按钮容器 -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/seek_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp">

        <!-- 播放/暂停按钮 -->
        <Button
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放"
            android:minWidth="100dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_media_play"
            android:drawablePadding="4dp"
            android:layout_marginHorizontal="4dp"
            android:enabled="false"/>

        <!-- 停止按钮 -->
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"
            android:minWidth="100dp"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_media_pause"
            android:drawablePadding="4dp"
            android:layout_marginHorizontal="4dp"
            android:enabled="false"/>

        <!-- 前进10秒 -->
        <Button
            android:id="@+id/btn_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前进10秒"
            android:minWidth="100dp"
            android:backgroundTint="#FFC107"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_media_next"
            android:drawablePadding="4dp"
            android:layout_marginHorizontal="4dp"
            android:enabled="false"/>

    </LinearLayout>

    <!-- 视频信息详情 -->
    <TextView
        android:id="@+id/tv_video_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#999"
        app:layout_constraintTop_toBottomOf="@id/control_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:gravity="center"/>

    <!-- 播放状态显示 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请先选择视频文件"
        android:textSize="14sp"
        android:textColor="#666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>